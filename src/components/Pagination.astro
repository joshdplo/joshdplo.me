---
const currentUrl = Astro.url.pathname;
const {
  currentPage,
  lastPage,
  total,
  prevUrl,
  nextUrl,
  label = "items",
} = Astro.props;
---

<nav>
  {!prevUrl && <span>Previous</span>}
  {prevUrl && <a href={prevUrl}>Previous</a>}
  <div>
    <div>Page {currentPage}/{lastPage}</div>
    <small>{total} total {label}</small>
  </div>
  {nextUrl && <a href={nextUrl}>Next</a>}
  {!nextUrl && <span>Next</span>}
</nav>

<style>
  nav {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    line-height: 1;
  }

  span {
    pointer-events: none;
    opacity: 0.5;
  }

  div {
    position: relative;
    display: flex;
    flex-direction: column;
    margin: 0 1.2rem;
    gap: 0.35rem;
  }
</style>

---
import { SITE } from "@constants";
import { getPageMenuLinksFromPath } from "@util";
import { getCollection } from "astro:content";
import CollectionLayout from "@layouts/CollectionLayout.astro";
import Pagination from "@components/Pagination.astro";
import SpotifyCard from "@components/SpotifyCard.astro";

const pageMenuLinks = getPageMenuLinksFromPath("/likes");
export async function getStaticPaths({ paginate }) {
  const songs = await getCollection("songs");

  return paginate(songs, { pageSize: SITE.SONGS_PER_PAGE });
}

const { page } = Astro.props;
const { total, currentPage, lastPage } = page;
---

<CollectionLayout
  pageTitle="likes songs ðŸŽ§"
  heroText="Likes"
  heroSubtext="songs"
  {pageMenuLinks}
>
  <section class="contain">
    <Pagination
      {total}
      {currentPage}
      {lastPage}
      label="songs"
      nextUrl={page.url.next}
      prevUrl={page.url.prev}
    />

    <div class="list">
      {page.data.map((song) => <SpotifyCard data={song} />)}
    </div>

    <Pagination
      {total}
      {currentPage}
      {lastPage}
      label="songs"
      nextUrl={page.url.next}
      prevUrl={page.url.prev}
    />
  </section>
</CollectionLayout>

<style lang="scss">
  @use "@css/util";

  .list {
    position: relative;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin: 2rem 0;
    justify-content: center;

    @include util.mq(sm) {
      grid-template-columns: 1fr 1fr;
    }

    @include util.mq(md) {
      grid-template-columns: 1fr 1fr 1fr;
    }
  }
</style>

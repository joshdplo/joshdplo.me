---
import BaseLayout from "@layouts/BaseLayout.astro";
import HeroText from "@components/HeroText.svelte";

const { error } = Astro.props;
---

<BaseLayout pageTitle="Error">
  <section class="contain">
    <div class="center-full">
      <HeroText text="ERROR!" size={15} alt={true} />
    </div>

    <div class="h1 bg border">
      WHAT THE HECK? something <span class="bg-opposite no-pad"
        >{error instanceof Error ? error.message : "Unknown error"}</span
      >
      happened because
      <span class="bg-accent no-pad">500</span>!
    </div>
  </section>
</BaseLayout>

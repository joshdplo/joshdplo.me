---
import CollectionLayout from "@layouts/CollectionLayout.astro";
import { getCollection } from "astro:content";

const keeps = await getCollection("keeps");
const tags = [...new Set(keeps.map((k) => k.data.tags).flat())];

const tagsCount = {};
tags.forEach((t) => {
  tagsCount[t] = 1;
  keeps.forEach((k) => {
    if (k.data.tags.includes(t)) tagsCount[t] += 1;
  });
});
---

<CollectionLayout
  pageTitle="keeps tags on things 🏷️"
  heroText="Keeps"
  heroDescenders={true}
>
  <section class="contain">
    {
      tags.map((t) => (
        <a href={`/keeps/tags/${t}`}>
          {t} ({tagsCount[t]})
        </a>
      ))
    }
  </section>
</CollectionLayout>
